{
   "layer":"top",
   "hyprland/workspaces":{
     "format":"{name}"
   },
   "modules-left":[
      "custom/launcher",
      "hyprland/workspaces"
   ],
   "modules-center":[
      "hyprland/window"
   ],
   "modules-right":[
      "custom/music",
      "tray",
      "network",
      "custom/cputemp",
      "cpu",
      "memory",
      "disk",
      "pulseaudio",
      "clock"
   ],
   "custom/music": {
      "return-type": "json",
      "exec": "waybar-mpris --position --autofocus --order SYMBOL:ARTIST:TITLE --play 'ï…„' --pause 'ïŠ‹'",
      "on-click": "waybar-mpris --send toggle",
      "escape": true
  },
   "custom/launcher":{
      "format":"ïŒ“ ",
      "on-click":"rofi -show combi -combi-modi \"window,drun\" --show-icons",
      "on-click-right":"pkill rofi"
   },
   "pulseaudio":{
      "tooltip":true,
      "tooltip-format": "Volume: {volume}%",
      "exec": "pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}'",
      "scroll-step":5,
      "format":"{icon} ",
      "format-muted":"ðŸ”‡",
      "on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
